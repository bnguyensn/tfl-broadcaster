{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./build/",
    "sourceMap": true,
    "module": "ESNext",
    "target": "es6",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.{test,spec}.ts"]
}
